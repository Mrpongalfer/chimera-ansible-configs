version: '3.7'

volumes:
  loki_data: {}

networks:
  # Use the existing monitoring network if defined elsewhere, otherwise create
  monitoring_net:
    # If Prometheus compose creates this, set external: true
    # If this is the first/only definition, leave as driver: bridge
    # Assuming Prometheus defined it, uncomment below:
    # name: prometheus_monitoring_net # Match the name used by Prometheus compose
    external: true

services:
  loki:
    image: grafana/loki:latest
    container_name: loki
    restart: unless-stopped
    volumes:
      # Mount the config file templated by Ansible
      - {{ loki_config_dir }}/loki-config.yml:/etc/loki/local-config.yaml:ro
      # Mount the data volume (adjust path inside container based on config)
      - loki_data:/loki
    ports:
      - "{{ loki_port | default(3100) }}:{{ loki_port | default(3100) }}" # Expose HTTP port
      # Optionally expose gRPC port if needed externally:
      # - "9096:9096"
    command: -config.file=/etc/loki/local-config.yaml
    networks:
      - monitoring_net
    labels:
      org.label-schema.group: "monitoring"
      managed-by: "ansible-chimera-prime"
